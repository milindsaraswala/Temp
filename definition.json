{
      "title": "Customer Complaint Form",
      "templateId": "cust-complaint-001",
      "isReadOnly": false, "fieldsPerRow": 3,
      "fields": [{ "name": "CIF", "type": "text", "label": "CIF Number", "required": true }],
      "sections": [
        {
          "title": "Customer Info",
          "fields": [
            {
              "type": "dropdown",
              "name": "customerType",
              "label": "Customer Type",
              "required": true,
              "options": [
                { "value": "retail", "label": "Retail" },
                { "value": "corporate", "label": "Corporate" }
              ],
              "defaultValue": "retail"
            },
            {
              "type": "text",
              "name": "cif",
              "label": "CIF Number",
              "required": true,
              "lookupUrl": "/api/cif",
              "populateFields": { "accountNumber": "accountNo", "debitCard": "debit", "creditCard": "credit" }
            },
            { "type": "text", "name": "accountNumber", "label": "Account Number", "readOnly": true },
            { "type": "text", "name": "debitCard", "label": "Debit Card", "readOnly": true },
            { "type": "text", "name": "creditCard", "label": "Credit Card", "readOnly": true }
          ]
        },
        {
          "title": "Complaint Details",
          "fields": [
            {
              "type": "dropdown",
              "name": "complaintCategory",
              "label": "Complaint Category",
              "required": true,
              "options": [
                { "value": "atm", "label": "ATM" },
                { "value": "branch", "label": "Branch" },
                { "value": "online", "label": "Online Banking" }
              ]
            },
            {
              "type": "dropdown",
              "name": "complaintSubCategory",
              "label": "Complaint Sub-Category",
              "required": true,
              "cascadeFrom": "complaintCategory",
              "cascadeMap": {
                "atm": [
                  { "value": "atm-card-blocked", "label": "Card Blocked" },
                  { "value": "atm-no-cash", "label": "No Cash Dispensed" }
                ],
                "branch": [
                  { "value": "branch-staff", "label": "Staff Behavior" },
                  { "value": "branch-delay", "label": "Long Wait Time" }
                ],
                "online": [
                  { "value": "online-login", "label": "Login Issues" },
                  { "value": "online-payment", "label": "Payment Failure" }
                ]
              }
            },
            {
              "type": "dropdown",
              "name": "branchLocation",
              "label": "Branch Location",
              "required": true,
              "optionSource": { "type": "api", "url": "/api/branches" },
              "optionLabelField": "branchName",
              "optionValueField": "branchCode"
            },
            { "type": "textarea", "name": "description", "label": "Complaint Description", "required": true },
            { "type": "checkbox", "name": "hasEvidence", "label": "Attach Evidence?" },
            {
              "type": "file",
              "name": "evidenceFile",
              "label": "Upload File",
              "visibleWhen": { "field": "hasEvidence", "operator": "==", "value": true },
              "accept": ".jpg,.png,.pdf",
              "multiple": true,
              "maxSizeMB": 5,
              "uploadUrl": "/api/upload"
            }
          ]
        },
        {
          "title": "Approval Info",
          "fields": [
            {
              "type": "radio",
              "name": "isUrgent",
              "label": "Is this urgent?",
              "options": [
                { "value": true, "label": "Yes" },
                { "value": false, "label": "No" }
              ],
              "defaultValue": true
            },
            { "type": "text", "name": "priorityLevel", "label": "Priority Level", "defaultExpression": "isUrgent == true ? 'High' : 'Normal'", "readOnly": true }
          ]
        }
      ],
      "actions": [
        {
          "label": "Submit"
        },
        {
          "label": "Send Back",
          "visibleWhen": "userRole === 'Approver' && currentStage !== 'Initiation'"
        },
        {
          "label": "Resubmit",
          "visibleWhen": "userRole === 'Initiator' && currentStage === 'Amendment'"
        }
      ]
    }
